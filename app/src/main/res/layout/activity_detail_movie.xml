<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_movie"
            android:textSize="@dimen/title_size_movie"
            android:padding="@dimen/size_standard_16"
            android:background="@color/green"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/poster_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/size_standard_16"
                android:layout_height="@dimen/size_image_thumbnails"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/size_standard_16">
                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rating"
                    android:layout_marginTop="@dimen/size_standard_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_mark"
                    android:text="@string/text_button_mark"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:background="@color/green"
                    android:layout_marginTop="@dimen/size_standard_8"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_standard_8"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/synopsis_movie"
            android:padding="@dimen/size_standard_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black"
            android:layout_marginTop="@dimen/size_standard_8"
            android:layout_marginBottom="@dimen/size_standard_8"
            android:layout_marginLeft="@dimen/size_standard_16"
            android:layout_marginRight="@dimen/size_standard_16"/>
        <TextView
            android:text="@string/text_label_trailers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="@dimen/size_standard_16"
            android:layout_marginRight="@dimen/size_standard_16"/>
        <LinearLayout
            android:id="@+id/ll_trailer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <TextView
            android:layout_marginTop="@dimen/size_standard_16"
            android:text="@string/text_label_reviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="@dimen/size_standard_16"
            android:layout_marginRight="@dimen/size_standard_16"/>
        <LinearLayout
            android:id="@+id/ll_reviews_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>

</ScrollView>